<div class="snippet-body">
  <h4>{{title}}</h4>
  <h6>{{author.username}}</h6>
  <h6 class="text-muted">{{language}}</h6>
  <pre><code class="language-{{language}}">{{code}}</code></pre>
  <p class="text-muted notes">{{notes}}</p>
  {{#tags}}<a href="#">{{.}}</a>{{/tags}}
  <div class="float-right">
    {{^favorite}}
    {{^.}}<img class="fav-star" src="/img/lit-sm.png" id="{{_id}}">{{/.}}
    {{#.}}<img class="fav-star" src="/img/unlit-sm.png" id="{{_id}}">{{/.}}{{faves}}
    {{/favorite}}
  </div>
</div>
